{
  "name": "facturationgn-backend",
  "version": "1.0.0",
  "description": "Backend sécurisé pour FactureGN",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:reset": "tsx src/db/migrate.ts --reset",
    "migrate:list": "tsx src/db/migrate.ts --list",
    "seed": "tsx src/db/seed.ts",
    "seed:empty": "tsx src/db/seed.ts --scenario=empty",
    "seed:minimal": "tsx src/db/seed.ts --scenario=minimal",
    "seed:standard": "tsx src/db/seed.ts --scenario=standard",
    "seed:full": "tsx src/db/seed.ts --scenario=full",
    "migrate:seed": "tsx src/db/scripts/migrate-and-seed.ts",
    "migrate:seed:minimal": "tsx src/db/scripts/migrate-and-seed.ts --scenario=minimal",
    "migrate:seed:standard": "tsx src/db/scripts/migrate-and-seed.ts --scenario=standard",
    "migrate:seed:full": "tsx src/db/scripts/migrate-and-seed.ts --scenario=full"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
